int main()
{
	//Create variables for words like this:
	string adjective = "happy";
	string animal = "dragon";
	string location = "sea";

	//Ask the user for input!
	cout << "An adjective: ";
	cin >> adjective;
	cout << "An animal: ";
	cin >> animal;
	cout << "A location: ";
	cin >> location;

	cout << "Once upon a time, there was a " << adjective << " " << animal << "." << endl;
	cout << "The " << animal << " lived by the " << location << "." << endl;
	//Finish the rest of your story here!
	return 0;
}
